Vagrant.configure("2") do |config|
  config.hostmanager.enabled = true
  config.hostmanager.manage_host = true

  # Define the VM as "monitoring" instead of default
  config.vm.define "monitoring" do |monitoring|
    monitoring.vm.hostname = "sandbox"
    monitoring.vm.box = "ubuntu/focal64"

    # Networking
    monitoring.vm.network "private_network", ip: "192.168.56.16"
    monitoring.vm.network "forwarded_port", guest: 9090, host: 9090     # Prometheus
    monitoring.vm.network "forwarded_port", guest: 3000, host: 3000     # Grafana
    monitoring.vm.network "forwarded_port", guest: 9093, host: 9093     # AlertManager

    # VM resources
    monitoring.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
      vb.name = "monitoring"
    end

    # Provisioning
    monitoring.vm.provision "shell", path: "provision.sh"
  end
end


